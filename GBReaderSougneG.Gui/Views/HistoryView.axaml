<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GBReaderSougneG.Avalonia.Views.HistoryView">
    <StackPanel MinHeight="150" MinWidth="500">
        <StackPanel Height="30" Background="#808080">
            <TextBlock HorizontalAlignment="Center" FontSize="24" >
                Let's PLay To Infinite Game Book
            </TextBlock>
        </StackPanel>
        <StackPanel Height="30" Background="#E0E0E0">
            <TextBlock HorizontalAlignment="Center" FontSize="20" >
                History
            </TextBlock>
        </StackPanel>
        <StackPanel Margin="10" Height="320" Width="780">
            <WrapPanel  x:Name="HistoryList" ItemWidth="760" ItemHeight="110" />
        </StackPanel>
        <StackPanel Margin="5">
            <Button  Click="OnGoBack_Click" x:Name="SearchButton" HorizontalAlignment="Center">Go Back</Button>
        </StackPanel>
    </StackPanel>
</UserControl>

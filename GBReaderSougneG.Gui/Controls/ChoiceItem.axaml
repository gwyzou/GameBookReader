<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="190" d:DesignHeight="100"
             x:Class="GBReaderSougneG.Avalonia.Controls.ChoiceItem"
             PointerPressed="ChoiceSelected_onClick">
    <Border BorderBrush="{DynamicResource SystemAccentColorDark3}"
            Background="#E0E0E0"
            BorderThickness="2"
            CornerRadius="8"
            Padding="4"
            Margin="5"
    >
        <TextBlock FontSize="16" TextWrapping="Wrap" x:Name="ChoiceText" HorizontalAlignment="Center" VerticalAlignment="Center">(default)</TextBlock>
    </Border>
</UserControl>
